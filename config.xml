<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.numeros" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Números</name>
    <description>
        Aplicativo que converte um número decimal para binário, hexadecimal, diz se é primo e faz uma amostra de cor em hexadecimal.
    </description>
    <author email="samuelfilho@outlook.com" href="http://argeslab.com.br">
        Samuel Damasceno Filho
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="assets/n-mdpi.png" density="mdpi" />
        <icon src="assets/n-ldpi.png" density="ldpi" />
        <icon src="assets/n-hdpi.png" density="hdpi" />
        <icon src="assets/n-xhdpi.png" density="xhdpi" />
        <icon src="assets/n-xxhdpi.png" density="xxhdpi" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
